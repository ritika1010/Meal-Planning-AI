<?xml version="1.0"?>

<!DOCTYPE module PUBLIC
          "-//Puppy Crawl//DTD Check Configuration 1.3//EN"
          "http://www.puppycrawl.com/dtds/configuration_1_3.dtd">
<module name="Checker">
  <property name="severity" value="warning" />

  <!-- Define coding style rules below -->

  <!-- Ensure Java source files have a new line at the end -->
  <module name="NewlineAtEndOfFile" />

  <!-- Ensure tabs are not used for indentation, use 4 spaces -->
  <module name="Indentation">
    <property name="caseIndent" value="4" />
    <property name="throwsIndent" value="4" />
    <property name="lineWrappingIndentation" value="4" />
  </module>

  <!-- Ensure there are no trailing whitespace characters -->
  <module name="FileTabCharacter">
    <property name="eachLine" value="true" />
  </module>

  <!-- Ensure class and method names follow the naming conventions -->
  <module name="RegexpSingleline">
    <property name="format" value="^[A-Z][a-zA-Z0-9]*$" />
    <property name="message" value="Class and method names should start with an uppercase letter and use camelCase." />
    <property name="ignoreComments" value="true" />
  </module>

  <!-- More rules can be added here -->

</module>
