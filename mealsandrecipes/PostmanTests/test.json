        }
      }
    },
    {
      "name": "Test Case 6: Create Recipe",
      "description": "Test creating a new recipe",
      "request": {
        "method": "POST",
        "url": "/api/v1/recipes",
        "headers": {
          "Content-Type": "application/json"
        },
        "body": {
          "name": "New Recipe",
